{

    "name": "H4R::Ghar basa notifier",
    "version": "0.0.1",
    "manifest_version": 3,
    
    "description": "Apni Ghar ho yaa Kiraya, basao khushiyon ki parivar.",
    "icons": {
        "16": "images/logo_16.png",
        "48": "images/logo_48.png",
        "128": "images/logo_128.png"
    },

    "background": {
        "page": "background.html"
    },
    
    "browser_action": {
        "default_icon": {
          "19": "images/logo_19.png",
          "38": "images/logo_38.png"
        },
        "default_title": "H4R::Ghar basa",
        "default_popup": "popup.html"
    },
    
    "minimum_chrome_version": "23",
    
    "permissions": [
        "https://*/*",
        "http://*/*", 
        "http://*/api/2/*",
        "https://*/api/2/*",
        "cookies",
        "idle",
        "notifications",
        "unlimitedStorage",
        "notifications",
        "background",
        "management",
        "tabs", "http://*/*", "https://*/*",
        "storage",
        "contextMenus"
    ],
    
    "omnibox": { "keyword": "h4r" },
    
    "content_security_policy" : "script-src 'self' https://ssl.google-analytics.com 'unsafe-eval'; object-src 'self'"
    
}
